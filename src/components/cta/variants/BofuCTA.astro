---
import LeadForm from "@components/LeadForm.astro";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
const sectionClass = ['cta-module', className].filter(Boolean).join(' ');
---
<section class={sectionClass} data-cta-key="bofu">
  <LeadForm
    eyebrow="Chốt thương vụ"
    headline="Đặt lịch khóa room đầu tư tại Hòa Lạc"
    description="Gửi thông tin thương vụ đang tìm hiểu để đội ngũ phản hồi 1-1, rà soát pháp lý và đánh giá rủi ro trước khi xuống tiền."
    deferDisplay={false}
  />
</section>
