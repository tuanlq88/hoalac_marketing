---
import LeadForm from "@components/LeadForm.astro";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
const sectionClass = ['cta-module', className].filter(Boolean).join(' ');
---
<section class={sectionClass} data-cta-key="tofu">
  <LeadForm
    eyebrow="Checklist nhanh"
    headline="Kiểm tra mức phù hợp Hòa Lạc"
    description="Trả lời 5 câu để đội ngũ gợi ý khu vực, pháp lý và room tài chính khớp với nhu cầu trong 24 giờ."
    deferDisplay={true}
  />
</section>
